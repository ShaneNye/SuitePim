{
  "name": "suitepim",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "SuitePim Desktop App",
  "author": "Sussex Beds",
  "license": "ISC",
  "scripts": {
    "server": "node server.js",
    "electron-dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "crypto": "^1.0.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "oauth-1.0a": "^2.2.6",
    "soap": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.sussexbeds.suitepim",
    "productName": "SuitePim",
    "files": [
      "public/**/*",
      "main.js",
      "server.js",
      "users.js",
      "fieldMap.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME_OR_ORG",
        "repo": "YOUR_REPO_NAME"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
