{
  "name": "suitepim",
  "version": "1.0.15",
  "type": "module",
  "main": "main.js",
  "description": "SuitePim Desktop App",
  "author": "Sussex Beds",
  "license": "ISC",
  "scripts": {
    "server": "node server.js",
    "electron-dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder -p always",
    "dist-test": "cross-env ELECTRON_IS_DEV=0 electron ."
  },
  "dependencies": {
    "@woocommerce/woocommerce-rest-api": "^1.0.2",
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "oauth-1.0a": "^2.2.6",
    "soap": "^1.3.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.sussexbeds.suitepim",
    "productName": "SuitePim",
    "files": [
      "main.js",
      "server.js",
      "users.js",
      "SuiteScripts/**/*",
      "public/**/*",
      "fonts/**/*",
      "package.json",
      "!release/**",
      "!dist/**",
      "!win-unpacked/**",
      "!**/*.map"
    ],
    "asarUnpack": [
      "public",
      ".env"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "public/fonts/",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ShaneNye",
        "repo": "SuitePim"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/moon-man-logo.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "public/assets/moon-man-logo.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/assets/moon-man-logo.png"
    }
  }
}
